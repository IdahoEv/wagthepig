<p id="notice"><%= notice %></p>

<dl>
  <dt>Name:</dt>
  <dd><%= @event.name %></dd>
  <dl>Date:</dl>
  <dd><%= @event.date %></dd>
  <dl>Where:</dl>
  <dd><%= @event.where %></dd>
</dl>

<%= link_to 'Edit', edit_event_path(@event) %>

<table>
  <tr>
    <th>Game Title</th>
    <th>Min Players</th>
    <th>Max Players</th>
    <th>Length</th>
    <th>BGG Link</th>
    <th>Interested Players</th>
    <th>My Interest</th>
  </tr>
  <% @event.games.each do |game| %>
    <tr>
      <td><%= game.name%></td>
      <td><%= game.min_players%></td>
      <td><%= game.max_players%></td>
      <td><%= (game.duration_secs || 0) / 60 %></td>
      <td><%= game.bgg_link.present? ? link_to("BGG", game.bgg_link) : "" %></td>
      <td><%= game.interests.size %></td>
      <td><%= render partial: 'my_interests', locals: {game: game} %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Add a Game', new_game_path(event_id: @event.id) %>
