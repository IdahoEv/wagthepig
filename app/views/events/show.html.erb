<p id="notice"><%= notice %></p>

<dl>
  <dt>Name:</dt>
  <dd><%= @event.name %></dd>
  <dl>Date:</dl>
  <dd><%= @event.date %></dd>
  <dl>Where:</dl>
  <dd><%= @event.where %></dd>
</dl>

<%= link_to 'Edit', edit_event_path(@event) %>

<table>
  <tr>
    <th>Game</th>
    <th>Players</th>
    <th>Length</th>
    <th># Interested</th>
    <th>Me</th>
    <th>Tools</th>
  </tr>
  <% @event.games.each do |game| %>
    <tr>
      <td><%= game.bgg_link.present? ? link_to(game.name, game.bgg_link) : game.name %></td>
      <td><%= game.min_players%>-<%= game.max_players %></td>
      <td><%= (game.duration_secs || 0) / 60 %></td>
      <td><%= game.interests.size %></td>
      <td><%= render partial: 'my_interests', locals: {game: game} %></td>
      <td><%= button_to "Edit Game", {controller: :games, action: :edit, id: game.id}, method: :get %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Add a Game', new_game_path(event_id: @event.id) %>
