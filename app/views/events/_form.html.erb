<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_area :name %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <div class="input-container">
      <%= form.datetime_select :date %>
    </div>
  </div>

  <div class="field">
    <%= form.label :where %>
    <%= form.text_area :where %>
  </div>

  <div class="field">
    <%= form.label "description (markdown supported)" %>
    <%= form.text_area :description, rows: 10 %>
  </div>

  <div class="actions">
    <%= form.button %>
  </div>
<% end %>
