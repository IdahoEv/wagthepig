<% if (my_interest = game.user_interest(current_user)).present? %>
  <%= button_to "Notes", edit_interest_path(my_interest.id), method: :get %>
  <%= button_to "Never mind", interest_path(my_interest.id), method: :delete %>
<% else %>
  <%= form_with class: 'button_to', url: interests_path do |form| %>
    <%= hidden_field_tag 'interest[game_id]', game.id %>
    <%= hidden_field_tag 'interest[user_id]', current_user.id %>
    <%= button_tag "Express interest in playing" %>
  <% end %>
<% end %>
