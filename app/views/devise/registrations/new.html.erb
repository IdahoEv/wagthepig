<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, required: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :bgg_username %>
    <%= f.text_field :bgg_username, autofocus: true, autocomplete: "bgg_username" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, minlength: 6, required: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.button "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
