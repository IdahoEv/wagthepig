<%= form_with(model: game, local: true) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= form.hidden_field :event_id %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
    <%= button_tag "Search", type: "button", name: "search" %>
  </div>

  <div class="search-results" style="display: none">
    <table>
      <tr class="header">
        <th class="thumbnail">Thumb</th>
        <th class="name">Name</th>
        <th class="description">Description</th>
        <th class="tools">Pick</th>
      </tr>
      <tr class="result" style="display: none">
        <td class="thumbnail"><img /></td>
        <td class="name"></td>
        <td class="description"></td>
        <td class="tools">
          <%= button_tag "Pick", type: "button", name: "pick" %>
        </td>
      </tr>
    </table>
  </div>

  <div class="field">
    <%= form.label :min_players %>
    <%= form.number_field :min_players %>
  </div>

  <div class="field">
    <%= form.label :max_players %>
    <%= form.number_field :max_players %>
  </div>

  <div class="field">
    <%= form.label :bgg_id %>
    <%= form.text_field :bgg_id %>
  </div>

  <div class="field">
    <%= form.label :duration_minutes %>
    <%= form.number_field :duration_minutes %>
  </div>

  <div class="field">
    <%= form.label :pitch %>
    <%= form.text_area :pitch %>
  </div>

  <div class="actions">
    <%= form.button %>
  </div>
<% end %>
